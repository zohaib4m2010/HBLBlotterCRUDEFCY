@model IEnumerable<WebBlotter.Models.SP_GetSBPBlotterCRRReportFCY_Result>


@{
    ViewBag.Title = "Blotter CRR Reporting FCY";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #customers {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        font-size: 11px;
        border-collapse: collapse;
        width: 90%;
        min-width: 800px;
        max-width: 1500px;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 2px;
            font-size: 10.5px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }

    table, th, td {
        border: 1px solid black;
    }
</style>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="customers" class="table table-striped table-bordered table-hover ">
    <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Previous Week 5 Pcr Req</th>
            <th>Previous Week 10 Pcr Req</th>
            <th></th>
        </tr>
    </thead>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
              
                <td width="10%">
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td width="10%">
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td width="10%" align="right">
                    @Html.DisplayFor(modelItem => item.PreWeek5PcrReq)
                </td>
                <td width="10%" align="right">
                    @Html.DisplayFor(modelItem => item.PreWeek10PcrReq)
                </td>
                <td width="18%">
                    @*@Html.ActionLink("Edit", "Edit", new {  id= item.CRRID  }) |*@
                    @Html.ActionLink("Delete", "Delete", new {  id= item.CRRID })
                </td>
            </tr>
        }
    }
</table>
