@model WebBlotter.Models.SBP_BlotterCRD

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>




@using (Html.BeginForm("_Create", "BlotterCRD", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @*<h2>Blotter CRD As On @ViewData["SysCurrentDt"]</h2>*@
    <h2>Create Blotter CRD</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">Select Nostro Bank</label>
        <div class="col-md-10">
            <select name="BankCode" class="form-control">
                @if (ViewBag.CRDNostroBanks != null)
                {
                    foreach (var item in ViewBag.CRDNostroBanks)
                    {
                        <option value="@item.BankCode">@item.BankName</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ValueDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ValueDate, new { htmlAttributes = new { @class = "form-control", @Value = DateTime.Now.ToString("yyyy-MM-dd") } })
            @Html.ValidationMessageFor(model => model.ValueDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CRD_InFlow, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CRD_InFlow, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CRD_InFlow, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CRD_OutFlow, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CRD_OutFlow, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CRD_OutFlow, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

