@model IEnumerable<WebBlotter.Models.SP_GetSBP_BlotterImportExport_Result>


@{
    ViewBag.Title = "Blotter Import Export";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #customers {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        font-size: 11px;
        border-collapse: collapse;
        width: 90%;
        min-width: 800px;
        max-width: 1500px;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 2px;
            font-size: 10.5px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }
</style>
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
<h2>Blotter Import Export</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<!--Search By Date -->
@using (Html.BeginForm(Session["ActiveController"].ToString(), Session["ActiveAction"].ToString(), FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <div class="btn-group d-inline my-2 my-lg-0 navbar-right" style="margin-right: 10px !important;" role="group">
        <input id="SearchByDateId" name="SearchByDate" type="date" value="@ViewBag.DateVal" onchange="this.form.submit()" class="form-control datepicker text-box single-line" />
    </div>
}
<!--Search By Date -->
<div>

    <table id="customers" class="table table-striped table-bordered table-hover ">
        <thead>
            <tr>
                <th>Date</th>
                <th>Branch</th>
                <th>Customer</th>
                <th>Currency</th>
                <th>Nostro Bank</th>
                <th>InFlow</th>
                <th>Against Currency</th>
                <th>Against Nostro Bank</th>
                <th>OutFlow</th>
                <th>Note</th>
                <th>Action</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Branch)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Currency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BankName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inflow)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgainstCurrency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgainstBank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Outflow)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.SNo }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.SNo })
                </td>
            </tr>
        }

    </table>
</div>